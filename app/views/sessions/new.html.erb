<h1>Login</h1>

<% if alert.present? %>
  <div class="alert alert-danger"><%= alert %></div>
<% end %>

<%= form_with url: sessions_path, method: :post do |form| %>
  <div class="form-group">
    <lable for="email">Email</label>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
    
  <div class="form-group">
    <lable for="password">Password</label>
    <%= form.password_field :password, class: 'form-control' %>
  </div>
    
  <%= form.submit 'Login', class: 'btn btn-success' %>
<% end %>

<div class="row mt-5">
  <span class="m-0 mr-2 align-baseline text-muted">No account yet?</span>
  <%=
    link_to(
      'Register',
      new_user_path,
      class: 'badge badge-primary font-weight-light text-white'
    )
  %>
</div>